@model IEnumerable<ProjectCore.Logica.Models.ViewModel.TasksIndexViewModel>

@{
        ViewData["Title"] = "Index";
    }

<h2>IndexTasks</h2>

<table class="table table-bordered">
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.Title)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Details)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.IsCompleted)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Effort)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.RemainingWork)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.StateName)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.ActivityName)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.PriorityName)
        </td>
    </tr>

    @foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpirationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsCompleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Effort)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RemainingWork)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StateName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriorityName)
        </td>
        <td>
            @Html.ActionLink(" ", "Index", "Task", new { projectId = item.Id }, new { @class = "btn btn-primary btn-sm fas fa-tasks" })
        </td>
    </tr>
    }
